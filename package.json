{
  "name": "read-pdf2llm",
  "version": "1.0.0",
  "description": "High-performance PDF text extractor (with OCR fallback) for Node.js, optimized for LLM pipelines. Uses PDFium, Tesseract, and C++ addon.",
  "main": "index.js",
  "keywords": [
    "pdf",
    "ocr",
    "nodejs",
    "native-addon",
    "tesseract",
    "pdfium",
    "llm",
    "text-extraction"
  ],
  "author": "Vitor Ricardo <vitorricardo@outlook.com>",
  "license": "MIT",
  "type": "commonjs",
  "gypfile": true,
  "scripts": {
    "build": "node-gyp configure build",
    "prebuild": "prebuild --napi --strip",
    "install": "prebuild-install || node-gyp rebuild",
    "fetch:vendor": "node tools/fetch-vendor.js",
    "prepublishOnly": "npm run prebuild"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.0.0",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0",
    "prebuild": "^11.0.0"
  },
  "files": [
    "index.js",
    "binding.gyp",
    "build/Release/*.node",
    "prebuilds/**",
    "tools/fetch-vendor.js",
    "src/**"
  ]
}

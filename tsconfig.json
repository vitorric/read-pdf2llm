{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@infra/*": [
        "src/infra/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@chat/*": [
        "src/modules/chat/*"
      ],
    }
  },
  "include": [
    "src",
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
  },
}